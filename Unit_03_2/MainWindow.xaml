<Window x:Class="Unit_03_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit_03_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <StackPanel x:Name="stackPanel">
        <RadioButton GroupName="Color" Content="Красный" IsChecked="True" />
        <RadioButton GroupName="Color" Content="Синий" />
        <RadioButton GroupName="Color" Content="Зелёный" />
        <RadioButton GroupName="Size" Content="12" IsChecked="True" />
        <RadioButton GroupName="Size" Content="14" />
        <RadioButton GroupName="Size" Content="16" />

    </StackPanel>
</Window>
